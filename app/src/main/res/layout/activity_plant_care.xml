<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plantcare" > <!-- your background image -->


    <!-- Title -->
<TextView
android:id="@+id/titleText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="List Of Tasks!"
android:textSize="26sp"
android:textStyle="bold"
android:textColor="#000000"
android:layout_marginTop="32dp"
android:layout_marginStart="24dp"
android:layout_alignParentTop="true"
android:layout_alignParentStart="true"/>

    <!-- Task List -->
<LinearLayout
android:id="@+id/taskList"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:layout_below="@id/titleText"
android:layout_marginTop="24dp"
android:paddingHorizontal="24dp">

<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Reminder 01"
    android:textSize="18sp"
    android:textColor="#000000"
    android:buttonTint="#000000"/>

<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Reminder 02"
    android:textSize="18sp"
    android:textColor="#000000"
    android:buttonTint="#000000"/>

<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Reminder 03"
    android:textSize="18sp"
    android:textColor="#000000"
    android:buttonTint="#000000"/>

<CheckBox
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Reminder 04"
    android:textSize="18sp"
    android:textColor="#000000"
    android:buttonTint="#000000"/>
</LinearLayout>


    <!-- Add Reminder Button -->
<Button
android:id="@+id/addReminderBtn"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="+ Add Reminder"
android:textColor="#000000"
android:backgroundTint="#007b5f"
android:layout_centerHorizontal="true"
android:layout_below="@id/taskList"
android:layout_marginTop="30dp"
android:paddingHorizontal="24dp"
android:paddingVertical="8dp"
android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/backToHomeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Home"
        android:textColor="#FFFFFF"
        android:backgroundTint="#555555"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/addReminderBtn"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
