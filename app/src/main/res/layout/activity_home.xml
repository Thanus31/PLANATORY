<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/swap"
    android:padding="16dp">

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Thanusha!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Horizontal Images -->
    <LinearLayout
        android:id="@+id/imageRow"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/welcomeText"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/home1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home2" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/home3" />
    </LinearLayout>

    <!-- Buttons Layout -->
    <LinearLayout
        android:id="@+id/buttonGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageRow"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/plantCareBtn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Plant Care"
                android:backgroundTint="#006644"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/plantSwapBtn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Plant Swap"
                android:backgroundTint="#006644"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/notesBtn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:backgroundTint="#006644"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/mapBtn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Map View(Not Done yet)"
                android:backgroundTint="#006644"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <Button
            android:id="@+id/profileBtn"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:backgroundTint="#006644"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#A8E6A1"
        android:gravity="center">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_view"
            android:layout_margin="16dp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/btn_star_big_off"
            android:layout_margin="16dp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_manage"
            android:layout_margin="16dp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_share"
            android:layout_margin="16dp" />
    </LinearLayout>
</RelativeLayout>
