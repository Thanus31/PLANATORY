<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/swap"
    android:padding="16dp">

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Thanusha!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Single Home Image -->
    <ImageView
        android:id="@+id/homeImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/welcomeText"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/homeimg" />


    <!-- Buttons Section -->
    <LinearLayout
        android:id="@+id/buttonGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeImage"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- First Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/plantCareBtn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Plant Care"
                android:backgroundTint="#006644"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/plantSwapBtn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Plant Swap"
                android:backgroundTint="#006644"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/notesBtn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:backgroundTint="#006644"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/mapBtn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Map View"
                android:backgroundTint="#006644"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Third Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/profileBtn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:backgroundTint="#006644"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/btnSensor"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Check Light"
                android:backgroundTint="#006644"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
